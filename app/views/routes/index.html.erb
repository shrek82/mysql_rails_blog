<h1>Listing routes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Short title</th>
    <th>Tags</th>
    <th>Category</th>
    <th>User</th>
    <th>Img path</th>
    <th>Banner path</th>
    <th>Province</th>
    <th>City</th>
    <th>Duration</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @routes.each do |route| %>
      <tr>
        <td><%= route.title %></td>
        <td><%= route.short_title %></td>
        <td><%= route.tags %></td>
        <td><%= route.category_id %></td>
        <td><%= route.user_id %></td>
        <td><%= route.img_path %></td>
        <td><%= route.banner_path %></td>
        <td><%= route.province_id %></td>
        <td><%= route.city_id %></td>
        <td><%= route.duration %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: {confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

